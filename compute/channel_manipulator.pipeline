#fragment

layout (location = 0) out vec4 gColor;
layout (location = 1) out vec4 gUV;

uniform sampler2D uColor;
uniform sampler2D uUV;

in vec2 vPos;
in vec2 vUV;

flat in int vInstance;

uniform vec4 uFactor;

void main() {
    gColor = texture(uColor, vUV) * uFactor;
    gUV = texture(uUV, vUV);
}